<div>
  <div class="d-flex justify-content-evenly btn-group">
    <%= link_to 'Voltar', places_path, class: "btn btn-secondary btn-sm rounded-pill mr-2" %>
    <%= link_to 'Registrar Nova Visita', new_place_visit_path(@place), class: "btn btn-primary btn-sm rounded-pill" %>
  </div>
  <br>
  <strong>Endereço:</strong>
  <%= @place.address %>
</div>

<% visitas_do_place = @place.visits %>
<% contador = 0 %>
<table class="table table-image">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Situação</th>
      <th scope="col">Data</th>
    </tr>
  </thead>
  <tbody>
      <% visitas_do_place.each do |visit| %>
        <% contador += 1 %>
        <tr>
          <th scope="row"><%= "#{contador}" %></th>
          <td><%= link_to "#{ visit.state.titleize }", visit_path(visit.id) %></td>
          <td><%= "#{ visit.data.day }-#{visit.data.month}-#{visit.data.year}" %></td>
        </tr>
      <% end %>
  </tbody>
</table>
