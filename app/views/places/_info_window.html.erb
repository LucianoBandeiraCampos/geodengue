<div>
  <% address_components = place.address.split(',') %>
  <p class="h6"><%= address_components[0] %></p>
  <% last_visit = place.visits.max_by(&:data) %>
  <p> <%= last_visit.state.titleize %> - <%= "#{ last_visit.data.day }/#{last_visit.data.month}/#{last_visit.data.year.to_s[2..3]}" %></p>
</div>

<div class="d-flex flex-column">
  <%= link_to 'Todas as visitas', place_path(place.id), class: "mb-2 btn btn-primary btn-sm rounded-pill shadow-none!", style: "font-size: 0.7rem" %>
  <%= link_to 'Registrar Nova Visita', new_place_visit_path(place.id), class: "mb-2 btn btn-outline-primary btn-sm rounded-pill", style: "font-size: 0.7rem" %>
</div>
