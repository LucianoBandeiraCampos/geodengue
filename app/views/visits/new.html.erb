<div class="visits-layout">
  <header>
    <h1 class="h3 pb-2 mb-3 border-bottom">Registrar Visita</h1>
  </header>

  <%= simple_form_for([@place, @visit], html: { class: "h-100 d-flex flex-column justify-content-between" }) do |f| %>
    <div class="layout-content">
      <div class="d-flex flex-column">
        <!-- One "tab" for each step in the form: -->
        <div class="tab">
          <p class="mb-4 h5">
            <%= @place.address.capitalize %>
          </p>
        </div>
        <div>
          <%= f.input :state, 
          collection: Visit.states.keys.map { |state| [state.titleize, state] }, 
          as: :radio_buttons, 
          collection_wrapper_tag: 'div',
          collection_wrapper_class: 'd-flex flex-column category-wrapper',
          item_wrapper_class: 'btn btn-outline-primary rounded-pill mt-3 category-item',
          input_html: {class: 'category-selector'},
          label: "Desfecho"
          %>
        </div>
      </div>
    </div>

    <footer class="pb-3">
      <div class="btn-group d-flex">
      <%= link_to 'Voltar', :back, id: "prevBtn", class: "btn btn-secondary rounded-pill m-2" %>
      <%= f.button :button, "AvanÃ§ar", id: "nextBtn", class: "btn btn-primary rounded-pill m-2" %>
      </div>
    </footer>
  <% end %>
</div>